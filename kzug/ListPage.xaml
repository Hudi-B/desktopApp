<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kzug.ListPage"
             Title="ListPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label 
            Text="List"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            FontSize="32"/>
        <ListView
            x:Name="ThingList"
            HorizontalOptions="Center" 
            BackgroundColor="#1F2A71"/>
        <Entry 
            x:Name="TextIn"
            HorizontalOptions="Center"/>
        <HorizontalStackLayout
            HorizontalOptions="Center">
            <Button
                x:Name="AddText"
                Text="Add"
                Clicked="AddTextClicked"
                />
            <Button
                x:Name="DeleteText"
                Text="Delete selected"
                Clicked="DeleteTextClicked"
                />
        </HorizontalStackLayout>
        <Entry 
            x:Name="IndexIn"
            HorizontalOptions="Center"/>
        <Button
            x:Name="InsertText"
            Text="Insert"
            Clicked="InsertTextClicked"
            />
    </VerticalStackLayout>
</ContentPage>